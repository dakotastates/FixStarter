
<%= form_with model:[@problem, @proposal], local: :true do |form| %>
<% if @proposal.errors.any? %>
<h5 style="color: red;"><%= @proposal.errors.full_messages.to_sentence %></h5>
<% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <h4>Materials Required</h4>
  <%= form.fields_for :materials do |m| %>

  <div class="field">
    <%= m.label :name %>
    <%= m.text_field :name%>
  </div>

  <div class="field">
    <%= m.label :quantity %>
    <%= m.number_field :quantity%><br>
  </div>

<% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
